    "browserify": "^13.1.1",
    "cssnano": "^3.8.2",
    "cssnext": "^1.8.4",
    "eslint": "^3.12.1",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^2.6.0",
    "postcss-color-function": "^2.0.1",
    "postcss-comment": "^1.0.3",
    "postcss-easy-import": "^1.0.1",
    "postcss-extend": "^1.0.5",
