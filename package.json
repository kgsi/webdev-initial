  "main": "index.js",
  "scripts": {
    "start": "npm run start-serve & npm run watch",
    "lint:js": "eslint src/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-serve": "browser-sync start --server dest/ --files dest/**/*",
